@using FakeNewsDetection.Models
@using FakeNewsDetection.Entities
@model NewsData

@{
    ViewData["Title"] = "Fake News Detection";
}

<h1>Detect fake news with ML</h1>
<hr />
@{
    if(!string.IsNullOrEmpty(Model.Result))
    {
        if(Model.Result.ToLower() == "fake")
        {
                <div class="alert alert-warning" role="alert">
                    <strong>Result:</strong> @Model.Result
                </div>
        }
        else if(Model.Result.ToLower() == "real")
        {
                <div class="alert alert-success" role="alert">
                    <strong>Result:</strong> @Model.Result
                </div>
        }
        else
        {
                <div class="alert alert-danger" role="alert">
                    <strong>Result:</strong> @Model.Result
                </div>
        }
    }
}
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @Html.DropDownListFor(x => x.Type, Html.GetEnumSelectList(typeof(TextType)), "Select input type", new { @class = "form-control" })
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group" id="TitleGroup">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control" rows="15"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <input asp-action="PredictInput" type="submit" value="Predict" class="btn btn-lightBlue" />
            </div>
        </form>
    </div>
</div>

<script>
    const typeSelect = document.getElementById('Type');
    const titleGroup = document.getElementById('TitleGroup');

    // Add an event listener to the select
    function handleTypeChange(){
        if (typeSelect.value == 1) {
            titleGroup.style.display = 'none'; // Show the title input
        } else {
            titleGroup.style.display = 'block'; // Hide the title input
        }
    }

    handleTypeChange();
    typeSelect.addEventListener('change', handleTypeChange);
</script>